@model ClassLogger.ViewModels.ListarCursoViewModel
@{
    ViewBag.Title = "Listar Cursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-8">
        <table class="table table-striped table-hover ">

            <thead>
                <tr>
                    <th>Curso</th>
                    <th>Coordenador</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var curso in @Model.Cursos)
            {
                <tr>
                    <td>@curso.Nome</td>
                    <td>@curso.CoordenadorId</td>
                </tr>
            }
            </tbody>

        </table>
    </div>
</div>
